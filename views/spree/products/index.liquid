{% content_for head %}
    <link href="/assets/products.css" rel="stylesheet">
<script src="/assets/products.js" type="text/javascript"></script>
{% end_content_for %}
<div class="row">
    <div class="span3">
        <div id="jsTree" class="taxonomies jsTree jstree-apple">
            <ul>
                {% for taxonomy in get_taxonomies %}
                <li id="taxonomy_{{taxonomy.id}}">
                    <a href="#">{{taxonomy.name}}</a>
                    {{taxonomy.root | taxons_tree: taxon, 3}}
                </li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="span6 product_list">
        {% include 'spree/products' %}
    </div>
    <div class="span3">
        {{content_for_right_sidebar}}
    </div>
</div>
