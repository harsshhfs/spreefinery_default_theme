{% content_for head %}
<script type="text/javascript" src="/themes/assets/javascripts/product.js"></script>
{% end_content_for %}

<div id="product-content" class="row">
  <div class="span3">
    {% include 'spree/taxonomies' %}
  </div>
  <div class="span9">
      {% include 'spree/breadcrumbs' %}
    <div class="row">
    <div class="product-images span4">
        <a class="zoom" href="{% product_image_url object:product, style:original %}">{% image_for_product style:product %}</a>
        <ul class="thumbnails">

            <li class="span1">
                <a class="thumbnail" href="#">
                    {% image_for_product style:mini %}
                </a>
            </li>
        </ul>
    </div>

    <div class="product-details span5">
        <h2 class="product-title">{{ product.name }}</h2>
        {% error_messages_for order %}
        <div><strong>{{ product.price_with_currency }}</strong></div>
        {% form_for 'order' as:post url_helper:populate_orders_path, html:"{ id:'basket', class:'product-cart form-inline'}" %}
        <div>
            {% capture_variable variants %}{% variants_and_option_values %}{% endcapture_variable %}
            {% if variants.size > 0 %}
            <ul class="nav nav-list">{% variants_for product %}</ul>
            {% endif %}
        </div>
        <div>
            <label>Qty:</label>
            {% if product.on_sale? %}
                {% if product.has_variants? %}
                    <input type="text" placeholder="1" class="span1" value="1" name="quantity" min="1" max="{{ product.on_hand }}" size="3">
                {% else %}
                    <input type="text" placeholder="1" class="span1" value="1" name="variants[{{ product.master.id }}]" min="1" max="{{ product.on_hand }}" size="3">
                {% endif %}
            {% else %}
                <strong>{{ 'product_page.out_of_stock' | t }}</strong>
            {% endif %}
            <button type="submit" class="btn btn-primary">{{ 'product_page.add_to_cart' | t }}</button>
        </div>
        {% endform_for %}
    </div>
    </div>

    <div class="tabbable">
        <ul class="nav nav-tabs">
            <li class="active"><a data-toggle="tab" href="#1">Description</a></li>
            <li><a data-toggle="tab" href="#2">{{ 'product_page.specifications' | t }}</a></li>
            <li><a data-toggle="tab" href="#3">{{ 'product_page.related_products' | t }}</a></li>
        </ul>
        <div class="tab-content">
            <div id="1" class="tab-pane active">
                <p>{{ product | product_description }}</p>
            </div>
            <div id="2" class="tab-pane">
              <ul>
                {% for product_property in product_properties %}
                <li>
                    <strong>{{ product_property.property.presentation }}:</strong>
                    <span>{{ product_property.value }}</span>
                </li>
                {% endfor %}
              </ul>
            </div>
            <div id="3" class="tab-pane">
                <ul class="thumbnails related_products">
                    <li class="span2">
                        <div class="thumbnail">
                            <a href="product.html"><img src="/themes/assets/images/220x180.gif" alt=""></a>
                            <div class="caption">
                                <a href="product.html"> <h5>iPod Touch</h5></a>  Price: $50.00<br><br>
                            </div>
                        </div>
                    </li>
                    <li class="span2">
                        <div class="thumbnail">
                            <a href="product.html"><img src="/themes/assets/images/220x180.gif" alt=""></a>
                            <div class="caption">
                                <a href="product.html"> <h5>iPod Touch</h5></a>  Price: $50.00<br><br>
                            </div>
                        </div>
                    </li>

                    <li class="span2">
                        <div class="thumbnail">
                            <a href="product.html"><img src="/themes/assets/images/220x180.gif" alt=""></a>
                            <div class="caption">
                                <a href="product.html"> <h5>iPod Touch</h5></a>  Price: $50.00<br><br>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
</div>