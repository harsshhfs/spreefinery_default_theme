<div id="popular" class="tab-pane fade in active">
    <table class="table table-striped table-bordered">
        <tbody>
        {% capture_variable popular %}{% popular_blog_posts count:5 %}{% endcapture_variable %}
        {% for popular_post in popular %}
        <tr>
            <td>
                <i class="icon-star "></i>&nbsp; <a href="{% url_helper blog_post_path, popular_post %}">{{ popular_post.title }}</a>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
</div>