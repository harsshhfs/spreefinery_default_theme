{% capture_variable products %}{% get_products per_page:4 %}{% endcapture_variable %}
<ul class="thumbnails">
    {% for product in products %}
    <li class="span2">
        <div class="thumbnail product">
            <a href="{{ 'product_path' | url_helper: product }}">{% image_for_product style:small %}</a>
            <div class="caption">
                <a href="{{ 'product_path' | url_helper: product }}"> <h5>{{ product.name }}</h5></a>
                Price: {{ product.price_with_currency }}
            </div>
        </div>
    </li>
    {% endfor %}
</ul>