{% unless products %}
  {% capture_variable products %}{% get_products per_page:6 %}{% endcapture_variable %}
{% endunless %}

<ul class="thumbnails">
    {% for product in products %}
    <li class="span3">
        <div class="product thumbnail">
            <a href="{% url_helper product_path, product %}">{% image_for_product style:product %}</a>
            <div class="caption">
                <a href="{% url_helper product_path, product %}"> <h5>{{ product.name }}</h5></a>
                {{ 'products_page.price' | t }}: {{ product.price_with_currency }}
            </div>
        </div>
    </li>
    {% endfor %}
</ul>
{% paginator collection:products %}
