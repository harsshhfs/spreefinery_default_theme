<legend>Your Shipping Address</legend>

<div id="ship_address_form">
  <div class="control-group">
    <label class="control-label" for="order[ship_address_attributes][firstname]">First Name</label>
    <div class="controls">
      <input name="order[ship_address_attributes][firstname]" value="{{current_order.ship_address.firstname}}" class="required" type="text">
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="order[ship_address_attributes][lastname]">Last Name</label>
    <div class="controls">
      <input name="order[ship_address_attributes][lastname]" value="{{current_order.ship_address.lastname}}" class="required" type="text">
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="order[ship_address_attributes][phone]">Phone Number</label>
    <div class="controls">
      <input name="order[ship_address_attributes][phone]" value="{{current_order.ship_address.phone}}" class="required" type="text">
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="order[ship_address_attributes][address1]">Street Address</label>
    <div class="controls">
      <input name="order[ship_address_attributes][address1]" value="{{current_order.ship_address.address1}}" class="required" type="text">
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="order[ship_address_attributes][address2]"></label>
    <div class="controls">
      <input name="order[ship_address_attributes][address2]" value="{{current_order.ship_address.address2}}" type="text">
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="order[ship_address_attributes][city]">City</label>
    <div class="controls">
      <input name="order[ship_address_attributes][city]" value="{{current_order.ship_address.city}}" class="required" type="text">
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="order[ship_address_attributes][zipcode]">Zip / Postal Code</label>
    <div class="controls">
      <input name="order[ship_address_attributes][zipcode]" value="{{current_order.ship_address.zipcode}}" class="required" type="text">
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="order[ship_address_attributes][country_id]">Country</label>
    <div class="controls">
      {% collection_select "order[ship_address_attributes]" method:"country_id", collection:available_countries, value_method:'id', text_method:'name', options:"{selected: context['order'].ship_address.country.id}", html_options:"{id: 'ship_countries_dropdown', class:'countries_dropdown'}" %}
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="order[ship_address_attributes][state_id]">State / Region</label>
    <div class="controls">
      <select id="ship_address_states_dropdown" name="order[ship_address_attributes][state_id]" value="{{current_order.ship_address.state.id}}" class="required">
        <option data-qrepeat="state states" data-qattr="value state.id" data-qtext="state.name"></option>
      </select>
      <input id="ship_address_states_input" name="order[ship_address_attributes][state_name]" value="{{current_order.ship_address.state.name}}" type="text">
    </div>
  </div>
</div>

<div class="control-group">
  <label class="control-label" for="use_billing">Ship to Billing Address</label>
  <div class="controls">
    <input type="checkbox" id="use_billing" value="1" name="order[use_billing]" {% if current_order.same_as_ship_address %}checked{% endif %}>
  </div>
</div>
